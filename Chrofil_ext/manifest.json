{
    "name": "Chrofil",
    "version": "0.1",
    "description": "A simple image filter extension for chrome",
    "manifest_version": 3,
    "author": "git.itzfork@gmail.com",
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "action": {
        "default_popup": "chrofil_popup.html",
        "default_title": "Chrofil - filter adder for chrome"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "./chrofil_css.css"
            ],
            "js": [
                "./chrofil_functions.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "tabs"
    ]
}